$white = #ffffff
$black = #000000
$invisible = rgba(0, 0, 0, 0)

$dark-gray = #333333
$gray = #818181
$light-gray = #f0f0f0

$gray--opacity--20 = rgba($gray, 0.20)
$gray--opacity--40 = rgba($gray, 0.40)
$gray--opacity--60 = rgba($gray, 0.60)
